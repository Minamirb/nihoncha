<div id="wide">
  <h2>ユーザー登録</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <p>お名前<br />
    <%= f.text_field :name %></p>

    <p>Paypal<br />
    <%= f.text_field :paypal %></p>

    <p>郵便番号<br />
    <%= f.text_field :zip %></p>

    <p>都道府県<br />
    <%= f.text_field :pref %></p>

    <p>住所<br />
    <%= f.text_field :adress %></p>

    <p>性別<br />
    <%= f.text_field :sex %></p>

    <p>メールアドレス<br />
    <%= f.text_field :email %></p>

    <p>パスワード<br />
    <%= f.password_field :password %></p>

    <p>パスワード(確認)<br />
    <%= f.password_field :password_confirmation %></p>

    <p><%= f.submit "送信" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
