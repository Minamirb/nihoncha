<div id="wide">
  <h2>パスワード再発行</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>

    <p>メールアドレス<br />
    <%= f.text_field :email %></p>

    <p><%= f.submit "送信" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
