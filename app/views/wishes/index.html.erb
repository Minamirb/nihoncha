<% @javascripts += ['jquery.lightboxLib', 'wishes/index'] %>
<div id="wide">
  <h2>欲しいものリスト</h2>
  
  <%= form_for(@wish, :url => preview_wishes_path) do |f| %>
    URL:&nbsp;<%= f.text_field :uri, :size => 59 %><%= f.submit 'プレビュー' %><%= image_tag('ajax-loader.gif', :style => 'display: none;', :id => 'ajax_loader') %>
  <% end %>
  <% @wishes.each do |wish| %>
    <h3><%= link_to wish.name, wish%>&nbsp;&nbsp;<span>&yen;<%=  wish.price %><span></h3>
    <p>
      <%= image_tag wish.image_url, :style => 'float: left;' if wish.image_url %>
      <%= wish.description %>
      <div style="clear:both;"></div>
    </p>
    <p style="text-align: right;"><%= link_to '[削除]', wish, :confirm => '削除してもよろしいですか?', :method => :delete %></p>
  <% end %>
  <p>
    <%= link_to 'トップページへ戻る', root_path %>
  </p>
  <div id="totop"><a href="#">ページのトップへ戻る</a></div><!-- toptop end -->
</div><!-- wide end -->
